#pragma once
#include <stdint.h>

#define __MPGX__

#define MPGX_VERSION_MAJOR @mpgx_VERSION_MAJOR@
#define MPGX_VERSION_MINOR @mpgx_VERSION_MINOR@
#define MPGX_VERSION_PATCH @mpgx_VERSION_PATCH@

/*
 * Supported Vulkan API functionality.
 */
#define MPGX_SUPPORT_VULKAN @MPGX_SUPPORT_VULKAN@
/*
 * Supported OpenGL functionality.
 */
#define MPGX_SUPPORT_OPENGL @MPGX_SUPPORT_OPENGL@

/*
 * Default MPGX array capacity in bytes.
 */
#define MPGX_DEFAULT_CAPACITY 4

/*
 * MPGX result strings.
 */
typedef enum MpgxResult_T
{
	SUCCESS_MPGX_RESULT = 0,
	FAILED_TO_OPEN_FILE_MPGX_RESULT = 1,
	FAILED_TO_SEEK_FILE_MPGX_RESULT = 2,
	FAILED_TO_READ_FILE_MPGX_RESULT = 3,
	GRAPHICS_IS_NOT_INITIALIZED_MPGX_RESULT = 4,
	GRAPHICS_IS_ALREADY_INITIALIZED_MPGX_RESULT = 5,
	FAILED_TO_INITIALIZE_GLFW_MPGX_RESULT = 6,
	FAILED_TO_INITIALIZE_FREETYPE_MPGX_RESULT = 7,
	FAILED_TO_INITIALIZE_VULKAN_MPGX_RESULT = 8,
	FAILED_TO_INITIALIZE_OPENGL_MPGX_RESULT = 9,
	VULKAN_IS_NOT_SUPPORTED_MPGX_RESULT = 10,
	OPENGL_IS_NOT_SUPPORTED_MPGX_RESULT = 11,
	RAY_TRACING_IS_NOT_SUPPORTED_MPGX_RESULT = 12,
	FAILED_TO_GET_FUNCTION_ADDRESS_MPGX_RESULT = 13,
	BAD_SHADER_CODE_MPGX_RESULT = 14,
	OUT_OF_HOST_MEMORY_MPGX_RESULT = 15,
	OUT_OF_DEVICE_MEMORY_MPGX_RESULT = 16,
	FAILED_TO_MAP_MEMORY_MPGX_RESULT = 17,
	ZERO_FRAMEBUFFER_SIZE_MPGX_RESULT = 18,
	DEVICE_IS_LOST_MPGX_RESULT = 19,
	SURFACE_IS_LOST_MPGX_RESULT = 20,
	UNKNOWN_ERROR_MPGX_RESULT = 21,
	MPGX_RESULT_COUNT = 22,
} MpgxResult_T;
/*
 * Returns MPGX result as string.
 * result - MPGX result.
 */
typedef uint8_t MpgxResult;

/*
 * MPGX result strings.
 */
static const char* const mpgxResultStrings[MPGX_RESULT_COUNT] = {
	"Success",
	"Failed to open file",
	"Failed to seek file",
	"Failed to read file",
	"Graphics is not initialized",
	"Graphics is already initialized",
	"Failed to initialize GLFW",
	"Failed to initialize FreeType",
	"Failed to initialize Vulkan",
	"Failed to initialize OpenGL",
	"Vulkan is not supported",
	"OpenGL is not supported",
	"Ray tracing is not supported",
	"Failed to get function address",
	"Bad shader code",
	"Out of host memory",
	"Out of device memory",
	"Failed to map memory",
	"Zero framebuffer size",
	"Device is lost",
	"Surface is lost",
	"Unknown error",
};

/*
 * Returns MPGX result as string.
 * result - MPGX result.
 */
inline static const char* mpgxResultToString(
	MpgxResult result)
{
	if (result >= MPGX_RESULT_COUNT)
		return "Unknown MPGX result";
	return mpgxResultStrings[result];
}

/*
 * Graphics APIs.
 */
typedef enum GraphicsAPI_T
{
	VULKAN_GRAPHICS_API = 0,
	OPENGL_GRAPHICS_API = 1,
	OPENGL_ES_GRAPHICS_API = 2,
	GRAPHICS_API_COUNT = 3,
} GraphicsAPI_T;
/*
 * Graphics API type.
 */
typedef uint8_t GraphicsAPI;

/*
 * Graphics API strings.
 */
static const char* const graphicsApiStrings[MPGX_RESULT_COUNT] = {
	"Vulkan",
	"OpenGL",
	"OpenGLES",
};

/*
 * Returns graphics API as string.
 * api - graphics API.
 */
inline static const char* graphicsApiToString(
	GraphicsAPI api)
{
	if (api >= GRAPHICS_API_COUNT)
		return "Unknown";
	return graphicsApiStrings[api];
}
